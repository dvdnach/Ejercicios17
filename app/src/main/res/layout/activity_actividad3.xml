<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dm2.ejercicios17.Actividad3">

    <TextView android:id="@+id/lbltxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="SUMA"
        android:textSize="36sp" />
    <EditText android:id="@+id/txt1"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:enabled="false"
        android:layout_below="@+id/lbltxt1"
        android:layout_toStartOf="@+id/lbltxt1" />
    <TextView android:id="@+id/lbltxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbltxt1"
        android:layout_toRightOf="@id/txt1"
        android:text="+"
        android:textSize="24sp" />
    <EditText android:id="@+id/txt2"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:enabled="false"
        android:layout_below="@+id/lbltxt1"
        android:layout_toRightOf="@id/lbltxt2"
        android:layout_alignBottom="@+id/txt3" />
    <TextView android:id="@+id/lbltxt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbltxt1"
        android:layout_toRightOf="@id/txt2"
        android:text="="
        android:textSize="24sp" />
    <EditText android:id="@+id/txt3"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_toRightOf="@id/lbltxt3"
        android:layout_below="@+id/lbltxt1"
        android:layout_alignBottom="@+id/txt1" />
    <Button android:id="@+id/btncomprobar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Comprobar resultado"
        android:layout_below="@id/txt2"
        android:onClick= "comprobar"/>
    <TextView android:id="@+id/lbltxt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="100px"
        android:layout_below="@id/btncomprobar"
        android:text="PREGUNTAS CORRECTAS: " />
    <TextView android:id="@+id/lbltxt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btncomprobar"
        android:layout_toRightOf="@id/lbltxt4"
        android:text=" INCORRECTAS: " />

</RelativeLayout>
